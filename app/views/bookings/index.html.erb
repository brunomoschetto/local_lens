<div class="bookings-container">
  <h1>Those are your bookings so far:</h1>

  <% @bookings.each do |booking| %>
    <div class="booking-card">
      <p><strong>Booking ID:</strong> <%= booking.id %></p>
      <p><strong>Local ID:</strong> <%= booking.local.id %></p>
      <p><strong>Date:</strong> <%= booking.date %></p>
      <p><strong>Message:</strong> <%= booking.message %></p>
      <p><strong>Capacity:</strong> <%= booking.capacity %></p>
    </div>
    <div class="booking-edit mb-3">
      <%= link_to "Edit", edit_booking_path(booking), class: "btn btn-ghost" %>
      <%= link_to "Delete", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-ghost" %>
    </div>
  <% end %>
</div>
