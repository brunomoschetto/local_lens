<div class="container mt-5">
  <h1>This is the list of all the locals available in this area:</h1>
  <% @locals.each do |local| %>
    <div class="card-product">
      <img src="https://plus.unsplash.com/premium_photo-1716866637657-da951241f2db?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTd8fHRvdXIlMjBndWlkZXxlbnwwfHwwfHx8MA%3D%3D"
                  alt="local_img">
      <div class="card-product-infos">
        <h3>Name: <%= local.name %></h3>
        <p>Languages: <%= local.languages %></p>
        <p>Categories: <%= local.categories %></p>
        <p>Description: <%= local.description %></p>
      </div>
    </div>
  <% end %>
</div>
