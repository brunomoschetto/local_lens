<div class="container mt-5 b">
  <div class="page-title">
    <h1>Locals in this area</h1>
    <h2>Login</h2>
  </div>
  <% @locals.each do |local| %>
    <%= link_to local_path(local), style: "text-decoration: none; color: inherit;" do %>
      <div class="card-product">
        <div class="info">
          <img src="https://images.unsplash.com/photo-1666386827887-5f9bb9bd2e01?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTV8fHByb2ZpbGUlMjBpbWFnZXxlbnwwfHwwfHx8MA%3D%3D"
                      alt="local_img" style="border-radius: 10px">
          <div class="card-product-infos">
            <p>Name: <%= local.name %></p>
            <p>Lang: <%= local.languages %></p>
            <p>Categories: <%= local.categories %></p>
          </div>
        </div>
        <div class="rating">
          <%= 4.7 %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
